<h1 class="text-3xl font-bold mb-6 text-center">My Blog</h1>

<% @blog_posts.each do |blog_post| %>
  <div class="mb-6 p-4 bg-white rounded shadow">
    <h2 class="text-2xl font-semibold mb-2">
      <%= link_to blog_post.title, blog_post, class: "text-blue-600 hover:underline" %>
    </h2>
    <div class="prose">
      <%= blog_post.body %>
    </div>
  </div>
<% end %>