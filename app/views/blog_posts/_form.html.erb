<%= form_with model: @blog_post, local: true, class: "max-w-lg mx-auto bg-white p-6 rounded shadow" do |form| %>
  <% if @blog_post.errors.any? %>
    <div id="error_explanation" class="mb-4 p-4 bg-red-100 text-red-800 rounded">
      <h2><%= pluralize(@blog_post.errors.count, "error") %> prohibited this blog post from being saved:</h2>
      <ul class="list-disc ml-5">
        <% @blog_post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="mb-4">
    <%= form.label :title, class: "block text-gray-700" %>
    <%= form.text_field :title, class: "w-full border border-gray-300 p-2 rounded" %>
  </div>

  <div class="mb-4">
    <%= form.label :body, class: "block text-gray-700" %>
    <%= form.text_area :body, rows: 6, class: "w-full border border-gray-300 p-2 rounded" %>
  </div>

  <div class="text-right">
    <%= form.button "Submit", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
  </div>
<% end %>
