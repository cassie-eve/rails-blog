<div class="max-w-md mx-auto bg-white p-6 rounded shadow mt-8">
  <h2 class="text-2xl font-semibold mb-4 text-center">Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border border-gray-300 p-2 rounded" %>
    </div>
    <div class="mb-4">
      <%= f.label :password, class: "block text-gray-700" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full border border-gray-300 p-2 rounded" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="mb-4 flex items-center">
        <%= f.check_box :remember_me, class: "mr-2" %>
        <%= f.label :remember_me, class: "text-gray-700" %>
      </div>
    <% end %>
    <div class="actions">
      <%= f.submit "Log in", class: "w-full bg-blue-500 text-white p-2 rounded hover:bg-blue-600" %>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
